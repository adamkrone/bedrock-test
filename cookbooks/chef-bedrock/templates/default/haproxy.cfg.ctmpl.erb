global
  log 127.0.0.1   local0
  log 127.0.0.1   local1 notice
  maxconn {{key "haproxy/global/maxconn"}}
  user haproxy
  group haproxy

defaults
  log     global
  mode    http
  retries 3
  timeout client 50s
  timeout connect 5s
  timeout server 50s
  option dontlognull
  option httplog
  option redispatch
  balance  roundrobin

# Set up application listeners here.

listen admin
  bind {{key "haproxy/admin/host"}}:{{key "haproxy/admin/port"}}
  mode http
  stats uri /


frontend http
  maxconn 2000
  bind 0.0.0.0:8080
  default_backend servers-http


backend servers-http
  {{range service "apache2@vagrant"}}
  server {{.Name}} {{.Address}}:{{.Port}}{{end}}

